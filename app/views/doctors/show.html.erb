<h1><%= @doctor.name %></h1>
<h2>Appointments:</h2>
<ul>
  <%= @doctor.appointments.each do |appointment| %>
    <li><%= link_to(appointment.patient.name, appointment.patient) %> on 
      <%= link_to(appointment.appointment_datetime.strftime("%B %-d, %Y at %H:%M"), appointment) %></li>
  <% end %>  
</ul>
